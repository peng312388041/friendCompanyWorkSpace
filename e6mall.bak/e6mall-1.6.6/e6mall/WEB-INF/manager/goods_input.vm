      <form id="form1" name="form1" method="post" action="goods_create.htm">
      <div class="content-box-content">
        <div class="tab-content default-tab" id="tab1">
            <table width="100%" border="0" cellspacing="0" cellpadding="5">
              <tr>
                <td align="right">商品类别：</td>
                <td>
                  <select name="goods.category.id" id="goods.category.id" reg="^(\w){32}$" tip="必须选择商品类别" onChange="MM_goToURL('parent','goods_input.htm?cg='+this.options[this.options.selectedIndex].value);return document.MM_returnValue">
                    <option value="">请选择所属分类</option>
                    #foreach( $item in $catelist )
                    <option value="$!{item.id}" #if( $ccategory.id==$item.id )selected="selected"#end>$!{item.nodestr}$!{item.name}</option>
                    #end
                  </select></td>
              </tr>
              <tr>
                <td align="right">商品名称：</td>
                <td><input name="goods.name" type="text" id="goods.name" size="60" maxlength="255" reg="^(?!_)(?!.*?_$)[\S\s]{2,255}$" tip="最少两个字符，最多255个字符" /></td>
              </tr>
              <tr>
                <td align="right">商品编号：</td>
                <td><input name="goods.sn" type="text" id="goods.sn" size="30" maxlength="255" reg="^(?!_)(?!.*?_$)[\S\s]{2,255}$" tip="最少两个字符，最多255个字符" /></td>
              </tr>
              <tr>
                <td align="right">语言：</td>
                <td><select name="goods.locale.id" id="goods.locale.id">
                  #foreach( $item in $localelist )
                  <option value="$!{item.id}" #if( $item.id=='zh_CN' )selected="selected"#end>$!{item.name}</option>
                  #end
                </select></td>
              </tr>
              <tr>
                <td align="right">品牌：</td>
                <td>
                  <select name="goods.brand.id" id="goods.brand.id">
                    #foreach( $item in $ccategory.gstype.brands )
                    <option value="$!{item.id}">$!{item.name}</option>
                    #end
                  </select>
                </td>
              </tr>
              <tr>
                <td align="right">单价：</td>
                <td><input name="goods.price" type="text" id="goods.price" size="14" maxlength="14" reg="^\d{1,12}(\.\d{1,2})?$" tip="输入商品单价，只允许数字。" /></td>
              </tr>
              <tr>
                <td align="right">市场价：</td>
                <td><input name="goods.mprice" type="text" id="goods.mprice" size="14" maxlength="14" reg="^\d{1,12}(\.\d{1,2})?$" tip="输入商品市场价，只允许数字。" /></td>
              </tr>
              <tr>
                <td align="right">赠送积分：</td>
                <td><input name="goods.points" type="text" id="goods.points" value="0" size="14" maxlength="11" reg="^\d{1,11}$" tip="输入赠送积分，只允许数字。" /></td>
              </tr>
              <tr>
                <td align="right">排序：</td>
                <td><input name="goods.csort" type="text" id="goods.csort" value="10" size="11" maxlength="11" reg="^\d{1,11}$" tip="输入商品排序，只允许数字。" /></td>
              </tr>
              <tr>
                <td align="right">促销：</td>
                <td>
                  参加：
                  <input type="radio" name="goods.promote" id="radio3" value="yes" />
不参加：
<input name="goods.promote" type="radio" id="radio4" value="no" checked="checked" />
                </td>
              </tr>
              <tr>
                <td>&nbsp;</td>
                <td><input type="submit" name="button" id="button" value=" 提交保存 " /></td>
              </tr>
            </table>
        </div>
        <div class="tab-content" id="tab2">
            <table width="100%" border="0" cellspacing="0" cellpadding="5">
                <tr>
                  <td align="right">详细介绍：</td>
                  <td><textarea name="goods.details" id="goods.details" cols="60" rows="15"></textarea></td>
                </tr>
                <tr>
                  <td align="right">&nbsp;</td>
                  <td><input type="submit" name="button" id="button" value=" 提交保存 " /></td>
                </tr>
              <script type="text/javascript">
				CKEDITOR.replace('goods.details',{
					filebrowserBrowseUrl : 'files.htm',
					filebrowserUploadUrl : 'ckeditor/uploader?type=File',   
					filebrowserImageUploadUrl : 'ckeditor/uploader?type=Image',   
					filebrowserFlashUploadUrl : 'ckeditor/uploader?type=Flash'  
        		});
			  </script>
            </table>
        </div>
        <div class="tab-content" id="tab3">
          <table width="100%" border="0" cellspacing="0" cellpadding="5">
            <tr>
              <td width="130" align="right">重量：</td>
              <td>
                <input name="goods.weight" type="text" id="goods.weight" value="0" size="14" maxlength="11" reg="^$|^\d{1,12}(\.\d{1,2})?$" tip="输入商品重量，只允许数字。" />
                <select name="goods.wgunit" id="goods.wgunit">
                  <option value="1" selected="selected">克</option>
                  <option value="1000">千克</option>
                </select></td>
            </tr>
            <tr>
              <td align="right">免费送货：</td>
              <td><input type="radio" name="goods.freeshipping" id="radio5" value="yes">
                是
                  <input name="goods.freeshipping" type="radio" id="radio6" value="no" checked="checked">
                  否</td>
            </tr>
            <tr>
              <td align="right">库存数量：</td>
              <td><input name="goods.inventory" type="text" id="goods.inventory" value="1" size="14" maxlength="11" reg="^\d{1,11}$" tip="输入库存数量，只允许数字。" /></td>
            </tr>
            <tr>
              <td align="right">是否上架：</td>
              <td>
              上架：<input name="goods.status" type="radio" id="radio" value="normal" checked="checked" />
              推荐：<input type="radio" name="goods.status" id="radio1" value="recommend" />
              下架：<input type="radio" name="goods.status" id="radio2" value="notshelve" />
              </td>
            </tr>
            <tr>
              <td align="right">标记：</td>
              <td>
              	精品：<input name="goods.keys" type="checkbox" id="goods.keys" value="btq">
                新品：<input name="goods.keys" type="checkbox" id="goods.keys" value="new">
                热销：<input name="goods.keys" type="checkbox" id="goods.keys" value="hot">
              </td>
            </tr>
            <tr>
              <td align="right">商品简单描述：</td>
              <td><textarea name="goods.intro" id="goods.intro" cols="45" rows="5"></textarea></td>
            </tr>
            <tr>
              <td align="right">&nbsp;</td>
              <td><input type="submit" name="button" id="button" value=" 提交保存 " /></td>
            </tr>
          </table>
        </div>
        <div class="tab-content" id="tab4">
          <table width="100%" border="0" cellspacing="0" cellpadding="5">
            <tr>
              <td width="130" align="right">商品类型：</td>
              <td>
              	<select name="goods.gstype.id" id="goods.gstype.id">
                	<option value="" selected="selected">暂不设置</option>
                    #foreach( $item in $gstypelist )
                	<option value="$!{item.id}" #if( $item.id==$ccategory.gstype.id )selected="selected"#end>$!{item.name}</option>
                	#end
              	</select>
              </td>
              </tr>
            <tr>
              <td align="right">&nbsp;</td>
              <td>
                  <table width="100%" border="0" cellspacing="0" cellpadding="5">
                    #set( $i=0 )
                    #foreach( $item in $gstype.extattrs )
                    <tr>
                      <td>$!{item.name}</td>
                      <td>
                     	  <select name="eavalues[$i].id" id="eavalues[$i].id">
                            <option value="">不设置</option>
                            #foreach( $subitem in $item.eavalues )
                            <option value="$!{subitem.id}">$!{subitem.value}</option>
                            #end
                          </select>
                      </td>
                    </tr>
                    #set( $i=$i+1 )
                    #end
                  </table>
                </td>
              </tr>
            <tr>
              <td align="right">&nbsp;</td>
              <td><input type="submit" name="button" id="button" value=" 提交保存 " /></td>
            </tr>
          </table>
        </div>
        <div class="tab-content" id="tab5">
          <table width="100%" border="0" cellspacing="0" cellpadding="5">
            <tr>
              <td width="130" align="right">META Keywords</td>
              <td><textarea name="goods.mkeywords" id="goods.mkeywords" cols="60" rows="5"></textarea></td>
            </tr>
            <tr>
              <td align="right">META Description</td>
              <td><textarea name="goods.mdescription" id="goods.mdescription" cols="60" rows="10"></textarea></td>
            </tr>
            <tr>
              <td align="right">&nbsp;</td>
              <td><input type="submit" name="button" id="button" value=" 提交保存 " /></td>
            </tr>
          </table>
        </div>
      </div>
